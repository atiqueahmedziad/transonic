@import 'lib';

.manage-modules-listing,
.region-feed {
    .feed-element {
        background: $faint-gray;
        border: 1px solid $faint-gray;
        border-radius: 10px;
        margin: 15px 0;
        padding: 10px;
        position: relative;

        &:hover {
            border: 1px solid $border-blue;
            cursor: pointer;
        }
        &.feed-app {
            background: $feed-app-red;

            &:hover {
                border: 1px solid darken($feed-app-red, 5%);
            }
        }
        &.collection {
            background: $collection-green;

            &:hover {
                border: 1px solid darken($collection-green, 5%);
            }
        }
        &.brand {
            background: $brand-blue;

            &:hover {
                border: 1px solid darken($brand-blue, 5%);
            }
        }
        a {
            color: #000;
            display: block;
            position: relative;
            height: 100%;
            text-decoration: none;
            width: 100%;
        }
    }
    .icon {
        float: left;
        margin-right: 15px;
    }
    .delete {
        background: url(../img/pretty/close.svg) 50% no-repeat;
        background-size: 18px auto;
        height: 34px;
        position: absolute;
        right: 5px;
        top: 6px;
        width: 40px;

        &:hover {
            background: url(../img/pretty/close_active.svg) 50% no-repeat;
            cursor: pointer;
        }
    }
    .loadmore {
        bottom: 0;
        left: 0;
        padding: 0;
        position: relative;
        width: 100%;

        button {
            width: 100%;
        }
    }
}

.element-listing {
    margin-bottom: 20px;
    max-height: 490px;
    overflow: scroll;
}

.search-elements {
    margin-bottom: 10px;
    padding: 10px 0 10px 10px;
    width: 100%;
}

.search-results h2 {
    font-weight: 400;
    opacity: .8;
}
