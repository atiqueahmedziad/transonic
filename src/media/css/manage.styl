@import 'lib';

.manage-modules-listing,
.feed {
    .feed-element {
        background: $faint-gray;
        border: 1px solid $faint-gray;
        border-radius: 10px;
        margin: 15px 0;
        padding: 10px;

        &:hover {
            border: 1px solid $border-blue;
            cursor: pointer;
        }
        &.feed-app {
            background: $feed-app-red;

            &:hover {
                border: 1px solid darken($feed-app-red, 5%);
            }
        }
        &.collection {
            background: $collection-green;

            &:hover {
                border: 1px solid darken($collection-green, 5%);
            }
        }
        &.brand {
            background: $brand-blue;

            &:hover {
                border: 1px solid darken($brand-blue, 5%);
            }
        }
        a {
            color: #000;
            display: block;
            position: relative;
            height: 100%;
            text-decoration: none;
            width: 100%;
        }
    }
    .icon {
        float: left;
        margin-right: 15px;
    }
    .delete {
        background: url(../img/pretty/close.svg) 50% no-repeat;
        background-size: 18px auto;
        height: 34px;
        position: absolute;
        right: 0;
        top: 0;
        width: 40px;

        &:hover {
            background: url(../img/pretty/close_active.svg) 50% no-repeat;
            cursor: pointer;
        }
    }
    .loadmore {
        background: none;
        border: 0;

        &:hover {
            background: none;
            border: 0;
        }
        button {
            background: none;
            width: 100%;

            &:hover {
                background: $barely-gray;
            }
        }
    }
}
