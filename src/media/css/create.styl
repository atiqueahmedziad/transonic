@import 'lib';

#create-content .create > li {
    float: left;
    height: 300px;
    margin: 20px 0 0;
    position: relative;
    text-align: center;
    width: 33%;

    h3 {
        bottom: 10px;
        position: absolute;
        text-align: center;
        width: 100%;
    }
}

.transonic-form {
    .field {
        margin: 20px 0;
    }
    .top-hat-field {
        > label:first-child {
            background: $light-gray;
            border-radius: 5px 5px 0 0;
            padding: 8px;
            width: 100%;
        }
        .inner {
            border: 1px solid $light-gray;
            width: 100%;
        }
    }
    .inline-label {
        background: $light-gray;
        border-radius: 5px 0 0 5px;
        display: inline-block;
        margin-right: -4px;
        padding: 8px 20px;
        vertical-align: middle;
    }
    .choices-box {
        border: 1px solid $light-gray;
        display: inline-block;
        padding: 6px 0 6px 6px;
        vertical-align: middle;
        width: 66%;
    }
    textarea {
        border: 1px solid $light-gray;
        height: 150px;
        width: 100%;
    }
    .top-hat-field.half {
        display: inline-block;
        vertical-align: top;
        width: 45%;

        &:first-child {
            margin-right: 20px;
        }
        &.hidden {
            display: none;
        }
    }
    fieldset {
        input {
            display: none;
        }
        label:hover {
            cursor: pointer;
        }
        input:checked + label:not(.color) {
            background: $sailor-blue;
            box-shadow: 0 0 1px 1px $light-gray;
            color: #fff;
        }
        &.vert-choices {
            border: 0;
            display: block;
            width: 100%;

            label {
                padding: 7px;
            }
        }
    }
    .submit button {
        background: $sailor-blue;
        border: 0;
        border-radius: 2px;
        color: #fff;
        margin: 10px 0;
        padding: 10px 15px;
    }

    .boring-text input {
        width: 33%;
    }
    .color-fields .field {
        display: inline-block;
        width: 45%;

        .colors {
            .color-box {
                border: 1px solid $light-gray;
                border-radius: 3px;
                display: inline-block;
                height: 20px;
                width: 20px;
                vertical-align: middle;
            }
            .selected-text {
                border-right: 1px solid $light-gray;
                display: inline-block;
                margin-right: 8px;
                padding-right: 8px;
                width: 68px;
            }
        }
        .choices {
            border: 0;
            display: inline-block;
            padding: 0;

            label {
                display: inline-block;
            }
        }
    }
    .featured-type {
        .inline-label {
            margin-right: -6px;
        }
        .featured-type-choices {
            padding: 0;

            label {
                display: inline-block;
                margin-left: 15px;
                padding: 7px;
            }
        }
    }
    .background-image.field {
        margin-top: 30px;
    }
    .background-image .inner {
        padding: 10px;
    }
    .description .description-type .inner {
        padding: 5px;
    }
    .collection-type {
        width: 100%;

        .background-image:not(.hidden) {
            display: inline-block;
        }
    }
}
