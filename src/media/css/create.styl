.fake-field {
    padding: 8px 10px 0 40px !important;
    position: relative;

    img {
        width: 21px;
        height: 21px;
        position: absolute;
        top: 9px;
        left: 9px;
    }
}

.locale-switcher {
    position: absolute;
    right: 0;
    top: -30px;

    label,
    select {
        display: inline-block;
    }
}

.apps {
    .background-image-input.shelf-landing {
        display: none;
    }
    .featured-app {
        display: inline-block;
        margin-top: 10px;
        width: 320px;
    }
    .selected-app {
        border: 1px solid $light-gray;
        border-radius: 0 0 5px 5px;
        font-weight: 300;
        padding: 10px;
    }
    .background-image.field {
        width: 625px;
    }
}

.apps-widget {
    margin-top: 10px;

    .apps .result {
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        position: relative;
        user-select: none;

        &:hover {
            background: none;
        }
    }
    .actions {
        bottom: 0;
        position: absolute;
        right: -2px;
        text-align: center;
        width: 50px;

        i, a {
            display: block;
            padding: 3px 0;
        }
        .reorder {
            color: $light-gray;
            font-size: 26px;

            &:hover {
                color: $sailor-blue;
            }
        }
        .delete {
            background: url(../img/pretty/close.svg) 50% no-repeat;
            background-size: 18px auto;
            height: 30px;
            left: 5px;
            position: relative;
            width: 40px;

            &:hover {
                background: url(../img/pretty/close_active.svg) 50% no-repeat;
                cursor: pointer;
            }
        }
    }
    .add-app-group {
        bottom: 2px;
        display: none;
        height: 30px;
        line-height: 30px;
        padding: 0;
        position: absolute;
        right: 3px;
        width: 150px;
    }
    .app-group-input {
        width: 90%;
    }
    .delete-app-group {
        background: url(../img/pretty/close.svg) 50% no-repeat;
        background-size: 18px auto;
        height: 34px;
        position: absolute;
        right: 2px;
        top: 17px;
        width: 40px;

        &:hover {
            background: url(../img/pretty/close_active.svg) 50% no-repeat;
            cursor: pointer;
        }
    }
}

.collections[data-collection-type="promo"] {
    .add-app-group {
        display: inline-block;
    }
}

option.highlighted {
    background-color: $flamin-hot-cheetos-orange;
    color: #fff;
}
