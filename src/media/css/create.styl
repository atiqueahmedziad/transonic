@import 'lib';

#create-content .create > li {
    float: left;
    height: 300px;
    margin: 20px 0 0;
    position: relative;
    text-align: center;
    width: 33%;

    h3 {
        bottom: 10px;
        position: absolute;
        text-align: center;
        width: 100%;
    }
}

.transonic-form {
    .island:first-child > h3 {
        font-weight: normal;
    }
    .field {
        margin: 15px 0;
    }
    .top-hat-field {
        > label:first-child {
            background: $light-gray;
            border-radius: 5px 5px 0 0;
            padding: 8px;
            width: 100%;
        }
        .inner {
            border: 1px solid $light-gray;
            width: 100%;
        }
    }
    .inline-label {
        background: $light-gray;
        border-radius: 5px 0 0 5px;
        display: inline-block;
        margin-right: -4px;
        padding: 8px 20px;
        vertical-align: middle;
    }
    .choices-box {
        border: 1px solid $light-gray;
        display: inline-block;
        padding: 6px 0 6px 6px;
        vertical-align: middle;
        width: 66%;
    }
    textarea {
        border: 1px solid $light-gray;
        height: 150px;
        width: 100%;
    }
    .top-hat-field.half {
        display: inline-block;
        vertical-align: top;
        width: 45%;

        &:first-child {
            margin-right: 20px;
        }
        &.hidden {
            display: none;
        }
    }
    fieldset {
        input {
            display: none;
        }
        label:hover {
            cursor: pointer;
        }
        input:checked + label:not(.color) {
            background: $sailor-blue;
            box-shadow: 0 0 1px 1px $light-gray;
            color: #fff;
        }
        &.vert-choices {
            border: 0;
            display: block;
            width: 100%;

            label {
                padding: 7px;
            }
        }
    }
    .submit button {
        background: $sailor-blue;
        border: 0;
        border-radius: 2px;
        color: #fff;
        margin: 10px 0;
        padding: 10px 15px;
    }

    .boring-text input {
        width: 33%;
    }
    .color-fields .field {
        display: inline-block;
        width: 45%;

        .colors {
            .color-box {
                border: 1px solid $light-gray;
                border-radius: 3px;
                display: inline-block;
                height: 20px;
                width: 20px;
                vertical-align: middle;
            }
            .selected-text {
                border-right: 1px solid $light-gray;
                display: inline-block;
                margin-right: 8px;
                padding-right: 8px;
                width: 68px;
            }
        }
        .choices {
            border: 0;
            display: inline-block;
            padding: 0;

            label {
                display: inline-block;
            }
        }
    }
    fieldset.tabs {
        border: 0;
        padding: 0;

        label {
            border-radius: 2px 2px 0 0;
            display: inline-block;
            margin-left: 20px;
            padding: 7px 15px;
        }
        input:checked + label {
            background: #fff;
            border: 1px solid $light-gray;
            border-bottom-width: 0;
            color: $dark-gray;
            box-shadow: none;
        }
    }
    .background-image .inner {
        padding: 10px;
    }
    .background-image-input {
        display: inline-block;
        margin-left: 20px;

        [data-fileinput-fake] {
            border: 1px dotted $light-gray;
            display: block;
            height: 200px;
            width: 200px;
            margin: 20px auto;
            text-align: center;

            &:hover {
                cursor: pointer;
            }
            img {
                max-width: 100%;
            }
            span {
                background: #fff;
                border-radius: 2px;
                font-weight: 300;
                padding: 4px 6px;
                position: relative;
                top: unquote('calc(50% - 8px)');
            }
            input {
                border: 0;
                border-radius: 5px;
                display: none;
                font-weight: 300;
                position: relative;
                text-align: center;

                &:hover {
                    cursor: default;
                }
                &[disabled] {
                    background-color: #fff;
                    border-radius: 10px;
                    color: $dark-gray;
                }
            }
        }
        &.filled [data-fileinput-fake] {
            border: 2px solid $green;
            position: relative;

            &:after {
                background: url(../img/pretty/tick.svg) no-repeat;
                content: "";
                display: block;
                position: absolute;
                height: 32px;
                right: 0;
                top: 15px;
                width: 32px;
            }
            input {
                display: block;
            }
        }
    }
    .description .description-type .inner {
        padding: 5px;
    }
        .editorial-title {
        select {
            border: 1px solid $light-gray;
            padding: 6px;
            vertical-align: middle;
        }
    }
    .editorial-type {
        input + label {
            margin-bottom: 5px;

            + label {
                font-size: 12px;
                margin: 0 0 10px 30px;
            }
        }
        input:not(:checked) + label + label {
            color: $earl-gray;
        }
    }
    .featured-app {
        display: inline-block;
        margin-top: 10px;
        width: 320px;

        .helptext {
            border: 1px solid $light-gray;
            border-radius: 0 0 5px 5px;
            font-weight: 300;
            padding: 10px;
            width: 320px;
        }
    }
}

.transonic-form.apps {
    .background-image-input.shelf-landing {
        display: none;
    }
}

.locale-switcher {
    position: absolute;
    right: 0;
    top: -30px;

    label,
    select {
        display: inline-block;
    }
}

.transonic-form .app-selector {
    margin: 10px 20px 0 0;
    vertical-align: top;
}

.collections {
    .float-wrap {
        float: left;
        width: 40%;

        input {
            width: 70%;
        }
    }
    .description.top-hat-field.half {
        float: right;
        position: relative
        right: 140px;
    }
    [data-collection-type="promo"],
    [data-collection-type="listing"] {
        .shelf-landing {
            display: none;
        }
    }
    .background-image {
        display: inline-block;
    }
}