@import 'lib';

#create-content .create > li {
    float: left;
    height: 300px;
    margin: 20px 0 0;
    position: relative;
    text-align: center;
    width: 33%;

    h3 {
        bottom: 10px;
        position: absolute;
        text-align: center;
        width: 100%;
    }
}

.transonic-form {
    .field {
        margin: 20px 0;
    }
    .inline-label {
        display: inline-block;
        background: $light-gray;
        border-radius: 5px 0 0 5px;
        margin-right: -4px;
        padding: 8px 20px;
        vertical-align: middle;
    }
    .slug input {
        width: 33%;
    }
    .color-fields .field {
        display: inline-block;
        width: 45%;

        .colors {
            border: 1px solid $light-gray;
            display: inline-block;
            padding: 6px 0 6px 6px;
            vertical-align: middle;
            width: 66%;

            .color-box {
                border: 1px solid $light-gray;
                border-radius: 3px;
                display: inline-block;
                height: 20px;
                width: 20px;
                vertical-align: middle;
            }
            .selected-text {
                border-right: 1px solid $light-gray;
                margin-right: 8px;
                padding-right: 8px;
            }
        }
        .choices {
            display: inline-block;

            .color-box {
                margin-right: 5px;

                &:hover {
                    cursor: pointer;
                }
            }
        }
    }
}