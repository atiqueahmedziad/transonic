@import 'lib';

#create-landing .create > li {
    float: left;
    height: 300px;
    margin: 20px 0 0;
    position: relative;
    text-align: center;
    width: 33%;

    h3 {
        bottom: 10px;
        position: absolute;
        text-align: center;
        width: 100%;
    }
    &.shelf {
        border-top: 1px solid $cement-gray;
        height: 60px;
        width: 100%;

        a {
            border-radius: 0 0 8px 8px;
            padding: 20px 40%;

            &:hover {
                background: $faint-gray;
            }
        }
        &:hover {
            cursor: pointer;
        }
    }
}

form {

    fieldset {
        input {
            display: none;
        }

        label:hover {
            cursor: pointer;
        }

        input:checked + label:not(.color):not(.rating) {
            background: $sailor-blue;
            color: #fff;
        }

        &.vert-choices {
            border: 0;
            display: block;
            width: 100%;

            label {
                padding: 7px;
            }
        }
    }

    fieldset.choices {
        border: 0;
        display: inline-block;
        padding: 0;

        label {
            display: inline-block;
        }
    }

    .field.bg-color {
        width: auto;

        .colors {
            display: inline-block;

            input {
                display: none;
            }

            label {
                width: auto;
            }

            .color-box {
                display: inline-block;
                height: 40px;
                width: 80px;
                vertical-align: middle;
            }

            .color {
                margin-right: -3px;
                position: relative;

                &.selected:before {
                    color: $white;
                    content: '\2713';
                    font-size: 24px;
                    font-weight: 100;
                    height: 24px;
                    left: 50%;
                    line-height: 1;
                    margin: -12px 0 0 -12px;
                    position: absolute;
                    text-align: center;
                    top: 50%;
                    width: 24px;
                }
            }
        }
    }


