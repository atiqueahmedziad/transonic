@import 'lib';

.feed-builder {
    align-items: flex-start;
    display: inline-flex;
    flex-wrap: wrap;
    position: relative;
    width: 100%;
    justify-content: space-between;

    .title {
        font-weight: 400;
        padding-bottom: 10px;
    }
    h2 {
        flex-basis: 100%;
    }
}

.module-selector {
    box-shadow: 0 0 1px 1px $cement-gray;
    flex-basis: 49%;
}

.feed-column {
    background: $barely-gray;
    box-shadow: 0 0 1px 1px $cement-gray;
    flex-basis: 49%;
    padding: 20px;

    .feeds {
        background: #fff;
        border: 1px solid $cement-gray;
        height: 480px;
        margin: 0 auto;
        margin-bottom: 20px;
        overflow: scroll;
        position: relative;
    }
    .submit {
        float: right;
    }
    [name="feed-region"] {
        background: #fff;
        border: 1px solid $light-gray;
        border-radius: 2px;
        margin-bottom: 20px;
        padding: 5px 0;
        width: 100%;
    }
    .empty-results {
        color: $cement-gray;
        margin-top: 20px;
        text-align: center;
    }
    .region-feed {
        padding: 0 5px;
    }
    .feed-elements {
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;

        .feed-element a {
            position: static;
        }
    }
}

// Adapt manage listing to feed builder.
.feed-builder .manage-modules-listing {
    .delete,
    .shelves {
        display: none;
    }
}

.feed-builder .region-feed .delete {
    top: 15px;
}

.feeds .loading {
    background: rgba(180, 180, 180, .8);
    height: 100%;
    left: 0;
    position: absolute;
    text-align: center;
    top: 0;
    width: 100%;
    z-index: 10;

    .fa-spin {
        color: #fff;
        font-size: 36px;
        position: relative;
        top: 100px;
    }
}

button.submit {
    padding-top: 0;
}
