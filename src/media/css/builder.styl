@import 'lib';

.feed-builder {
    align-items: flex-start;
    display: inline-flex;
    flex-wrap: wrap;
    position: relative;
    width: 100%;
    justify-content: space-between;

    h2 {
        flex-basis: 100%;
    }
}

.module-selector {
    box-shadow: 0 0 1px 1px $cement-gray;
    flex-basis: 49%;
}

.feed-column {
    background: $barely-gray;
    box-shadow: 0 0 1px 1px $cement-gray;
    flex-basis: 49%;
    padding: 20px;

    .feeds {
        background: #fff;
        border: 1px solid $cement-gray;
        height: 480px;
        margin: 0 auto;
        margin-bottom: 20px;
        overflow: scroll;
    }
    .submit {
        float: right;
    }
    [name="feed-region"] {
        background: #fff;
        border: 1px solid $light-gray;
        border-radius: 2px;
        margin-bottom: 20px;
        padding: 5px 0;
        width: 100%;
    }
    .empty-results {
        color: $cement-gray;
        margin-top: 20px;
        text-align: center;
    }
    .feed {
        padding: 0 5px;
    }
    .feed-elements {
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;

        .feed-element a {
            position: static;
        }
    }
}

// Adapt manage listing to feed builder.
.feed-builder .manage-modules-listing {
    .delete {
        display: none;
    }
}
